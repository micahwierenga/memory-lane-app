<% include ./partials/header.ejs %>

    

<div class="row">
  <div class='col-md-7' id='mapFrame'>
    <input id="pac-input" class="controls" type="text" placeholder="Search Box">
    <div id="map"></div>
  </div>

  <div class='col-md-4' id='storyModal'>
    


    <form id='storyForm' method='post' action='/story' name='storyBody'>
      <div class='form-group'>
        <input class='form-control' type='text' placeholder='Street' name='street' id='street'>
        <input class='form-control' type='text' placeholder='City' name='city' id='city'>
      </div>

      <div class='form-group'>
        <label for="monthStart">From</label>
        <input class='form-control col-md-1' type='text' placeholder='Month' name='monthStart' id='monthStart'>
        <input class='form-control' type='text' placeholder='Year' name='yearStart' id='yearStart'>
        
      </div>

      <div class='form-group'>
        <label for="yearStart">To</label>
        <input class='form-control col-md-1' type='text' placeholder='Month' name='monthEnd' id='monthEnd'>
        <input class='form-control' type='text' placeholder='Year' name='yearEnd' id='yearEnd'>
      </div>

      <div class='form-group'>
        <textarea class="form-control" rows="5" name='storyBody' placeholder='Your Story' id='storyBody'></textarea>
      </div>

      <div class='form-group'>
        <input class='btn btn-default' type='submit'>
      </div>
    </form>
  </div>
</div>

<% include ./partials/footer.ejs %>
